<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE module PUBLIC
		"Devocative/Demeter Module"
		"http://www.devocative.org/dtd/demeter-module.dtd">

<module
		shortName="MTS"
		mainClass="org.devocative.metis.module.MetisDModule"
		mainResource="org.devocative.metis.web.MetisDModule">

	<entities>
		<entity type="org.devocative.metis.entity.connection.DBConnection"/>
		<entity type="org.devocative.metis.entity.ConfigLob"/>
		<entity type="org.devocative.metis.entity.dataSource.DataSource"/>
		<entity type="org.devocative.metis.entity.dataSource.DataSourceRelation"/>
	</entities>

	<dPages>
		<dPage type="org.devocative.metis.web.dPage.DataSourceExecutor"
			   title="KEY:dPage.mts.DataSourceViewer"
			   uri="/dsexec"
			   inMenu="false"/>

		<dPage type="org.devocative.metis.web.dPage.DataSourceForm"
			   title="KEY:dPage.mts.DataSourceForm"
			   uri="/dsform"
			   inMenu="true"/>

		<dPage type="org.devocative.metis.web.dPage.DataSourceList"
			   title="KEY:dPage.mts.DataSourceList"
			   uri="/dslist"
			   inMenu="true"/>

		<dPage type="org.devocative.metis.web.dPage.DBConnectionForm"
			   title="KEY:dPage.mts.DBConnectionForm"
			   uri="/dbcform"
			   inMenu="true"/>
	</dPages>
